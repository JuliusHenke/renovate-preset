{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": "config:base",
  "timezone": "Europe/Berlin",
  "schedule": [
    "before 3am on saturday",
  ],
  "baseBranches": [
    "dev"
  ],
  "labels": [
    "renovate"
  ],
  "onboarding": true,
  "onboardingConfig": {
    "extends": [
      "config:base"
    ]
  },
  "prHourlyLimit": 10,
  "prConcurrentLimit": 20,
  "branchConcurrentLimit": 20,
  "automerge": false,
  "rebaseWhen": "behind-base-branch",
  "prCreation": "not-pending",
  "stabilityDays": 7,
  "internalChecksFilter": "strict",
  "assignees": [
    "JuliusHenke"
  ],
  "packageRules": [
    {
      "description": "Group non-major updates",
      "groupName": "non-major",
      "prPriority": 1,
      "stabilityDays": 3,
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "matchCurrentVersion": "/^v?[^0].*/"
    },
    {
      "description": "Group major dev updates",
      "groupName": "major-dev",
      "prPriority": 0,
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "major"
      ]
    },
    {
      "description": "Only update node to active LTS versions",
      "matchPackageNames": [
        "node",
        "@types/node"
      ],
      "allowedVersions": "/^16/"
    }
  ]
}
