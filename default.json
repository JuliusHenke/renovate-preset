{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": "config:best-practices",
  "timezone": "Europe/Berlin",
  "schedule": [
    "before 8am every saturday"
  ],
  "labels": [
    "renovate"
  ],
  "onboarding": true,
  "onboardingConfig": {
      "$schema": "https://docs.renovatebot.com/renovate-schema.json",
      "extends": [
        "github>juliushenke/renovate-preset"
      ]
  },
  "prHourlyLimit": 10,
  "prConcurrentLimit": 10,
  "branchConcurrentLimit": 10,
  "automerge": false,
  "rebaseWhen": "behind-base-branch",
  "prCreation": "not-pending",
  "minimumReleaseAge": 7,
  "internalChecksFilter": "strict",
  "assignees": [
    "JuliusHenke"
  ],
  "packageRules": [
    {
      "groupName": "patch",
      "extends": [
        "github>juliushenke/renovate-preset:patch.json"
      ]
    },
    {
      "groupName": "frontend-patch",
      "extends": [
        "github>juliushenke/renovate-preset:patch.json"
      ],
      "matchFileNames": [
        "**/frontend/**"
      ]
    },
    {
      "groupName": "backend-patch",
      "extends": [
        "github>juliushenke/renovate-preset:patch.json"
      ],
      "matchFileNames": [
        "**/backend/**"
      ]
    },
    {
      "groupName": "minor",
      "extends": [
        "github>juliushenke/renovate-preset:minor.json"
      ]
    },
    {
      "groupName": "frontend-minor",
      "extends": [
        "github>juliushenke/renovate-preset:minor.json"
      ],
      "matchFileNames": [
        "**/frontend/**"
      ]
    },
    {
      "groupName": "backend-minor",
      "extends": [
        "github>juliushenke/renovate-preset:minor.json"
      ],
      "matchFileNames": [
        "**/backend/**"
      ]
    },
    {
      "description": "Only update node to active LTS versions",
      "matchPackageNames": [
        "node",
        "@types/node"
      ],
      "allowedVersions": "<=22"
    }
  ]
}
