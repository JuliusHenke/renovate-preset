{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": "config:base",
  "timezone": "Europe/Berlin",
  "schedule": [
    "before 8am every weekend"
  ],
  "baseBranches": [
    "dev"
  ],
  "labels": [
    "renovate"
  ],
  "onboarding": true,
  "onboardingConfig": {
    "extends": [
      "config:base"
    ]
  },
  "prHourlyLimit": 10,
  "prConcurrentLimit": 10,
  "branchConcurrentLimit": 10,
  "automerge": false,
  "rebaseWhen": "behind-base-branch",
  "prCreation": "not-pending",
  "stabilityDays": 7,
  "internalChecksFilter": "strict",
  "assignees": [
    "JuliusHenke"
  ],
  "packageRules": [
    {
      "groupName": "patch",
      "extends": [
        "github>juliushenke/renovate-preset:patch.json"
      ],
      "ignorePaths": [
        "**/node_modules/**",
        "**/bower_components/**",
        "**/frontend/**",
        "**/backend/**"
      ]
    },
    {
      "groupName": "frontend-patch",
      "extends": [
        "github>juliushenke/renovate-preset:patch.json"
      ],
      "includePaths": [
        "**/frontend/**"
      ]
    },
    {
      "groupName": "backend-patch",
      "extends": [
        "github>juliushenke/renovate-preset:patch.json"
      ],
      "includePaths": [
        "**/backend/**"
      ]
    },
    {
      "groupName": "minor",
      "extends": [
        "github>juliushenke/renovate-preset:minor.json"
      ],
      "ignorePaths": [
        "**/node_modules/**",
        "**/bower_components/**",
        "**/frontend/**",
        "**/backend/**"
      ]
    },
    {
      "groupName": "frontend-minor",
      "extends": [
        "github>juliushenke/renovate-preset:minor.json"
      ],
      "includePaths": [
        "**/frontend/**"
      ]
    },
    {
      "groupName": "backend-minor",
      "extends": [
        "github>juliushenke/renovate-preset:minor.json"
      ],
      "includePaths": [
        "**/backend/**"
      ]
    },
    {
      "description": "Only update node to active LTS versions",
      "matchPackageNames": [
        "node",
        "@types/node"
      ],
      "allowedVersions": "/^20/"
    }
  ]
}
